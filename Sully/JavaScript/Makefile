.PHONY: clean fclean re all

NAME = Sully

###################################################################################
#                                  Interpreteur                                   #
###################################################################################

INTER = node

###################################################################################
#                              Directories & Files                                #
###################################################################################

SRCS_DIR     = .
SRCS_LIST    = Sully.js

SRCS  = $(addprefix $(SRCS_DIR)/, ${SRCS_LIST})
OBJS  = $(addprefix $(OBJS_DIR)/, ${SRCS_LIST:.c=.o})

###################################################################################
#                                   Commands                                      #
###################################################################################

all: $(NAME)

$(NAME): $(SRCS_LIST)
	@${INTER} ${NAME}

clean:
	@rm -rf ${NAME}_*.js

fclean: clean
	@rm -rf $(NAME)

re: fclean all
